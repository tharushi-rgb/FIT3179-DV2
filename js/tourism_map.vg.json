{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 500,
  "title": {
    "text": "Total Tourism by State (2019-2025)",
    "fontSize": 20,
    "font": "Roboto",
    "anchor": "start",
    "subtitle": "Total Daytrip Trips Over 7 Years - Choropleth Map with Real Data",
    "subtitleFontSize": 14,
    "subtitleColor": "#666"
  },
  "data": {
    "url": "data/states.geojson",
    "format": {
      "type": "json",
      "property": "features"
    }
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "data/tourism_daytrips.csv",
          "format": { "type": "csv" }
        },
        "key": "State",
        "fields": ["State"]
      },
      "as": "state_match"
    },
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "data/tourism_daytrips.csv",
          "format": { "type": "csv" }
        },
        "key": "State",
        "fields": ["Daytrip_Trips_Thousands"]
      }
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Daytrip_Trips_Thousands",
          "as": "Total_Daytrips_2019_2025"
        }
      ],
      "groupby": ["properties.STATE_NAME"]
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [133, -28],
    "scale": 800
  },
  "mark": {
    "type": "geoshape",
    "stroke": "#333",
    "strokeWidth": 1.5
  },
  "encoding": {
    "color": {
      "field": "Total_Daytrips_2019_2025",
      "type": "quantitative",
      "title": "Total Daytrips (000s)",
      "scale": {
        "scheme": "orangered",
        "type": "quantile"
      },
      "legend": {
        "orient": "right",
        "format": ",.0f",
        "titleLimit": 200
      }
    },
    "tooltip": [
      {
        "field": "properties.STATE_NAME",
        "type": "nominal",
        "title": "State/Territory"
      },
      {
        "field": "Total_Daytrips_2019_2025",
        "type": "quantitative",
        "title": "Total Daytrips 2019-2025 (000s)",
        "format": ",.0f"
      }
    ]
  }
}
